<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="titleMediumTextStyle">
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontWeight">500</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="titleTextStyle">
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontWeight">400</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="titleSmallTextStyle">
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white_82</item>
        <item name="fontWeight">400</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="labelTextStyle">
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/lato</item>
        <item name="fontWeight">400</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="editTextStyle">
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/lato</item>
        <item name="fontWeight">400</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textCursorDrawable">@drawable/color_cursor</item>
    </style>

    <style name="checkboxStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/lato</item>
        <item name="fontWeight">400</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:button">@drawable/ic_checkbox_drawable</item>
    </style>

    <style name="buttonTextStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:fontFamily">@font/lato</item>
        <item name="fontWeight">400</item>
        <item name="android:textFontWeight">400</item>
    </style>
</resources>