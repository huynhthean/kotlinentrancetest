<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.KotlinEntranceTest" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <!-- Customize your theme here. -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="titleMediumTextStyle">
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontWeight">500</item>
    </style>

    <style name="titleTextStyle">
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontWeight">400</item>
    </style>

    <style name="titleSmallTextStyle">
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white_82</item>
        <item name="fontWeight">400</item>
    </style>

    <style name="labelTextStyle">
        <item name="android:textColorHint">@color/white_50</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/lato</item>
        <item name="fontWeight">400</item>
    </style>

    <style name="editTextStyle">
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/lato</item>
        <item name="fontWeight">400</item>
        <item name="android:textCursorDrawable">@drawable/color_cursor</item>
    </style>

    <style name="checkboxStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/lato</item>
        <item name="fontWeight">400</item>
        <item name="android:button">@drawable/ic_checkbox_drawable</item>
    </style>

    <style name="buttonTextStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:fontFamily">@font/lato</item>
        <item name="fontWeight">400</item>
    </style>
</resources>